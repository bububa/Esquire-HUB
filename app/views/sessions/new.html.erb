<section id="signin">
    <div class="page-header">
        <h1>登录</h1>
        <p>注册用户登录需要管理员激活</p>
    </div>
    <%= form_for(:session, :url => sessions_path) do |f| %>
        <fieldset>
            <legend>用户登录表单</legend>
            <div class="clearfix">
                <%= f.label :email, "电邮" %>
                <div class="input"><%= f.text_field :email, :class=>"xlarge" %></div>
            </div>
            <div class="clearfix">
                <%= f.label :password, "密码" %>
                <div class="input"><%= f.password_field :password, :class=>"xlarge" %></div>
            </div>
            <div class="actions">
                <%= f.submit "登录", :class=>"btn primary" %>
                <div class="pull-right">新用户? <%= link_to "现在注册!", signup_path, :class=>"btn success" %></div>
            </div>
        </fieldset>
    <% end %>
</section>